<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".code.activities.SplashActivity" android:background="@color/colorPrimary">
    <ImageView
            android:layout_height="150dp"
            android:id="@+id/imageView" android:layout_width="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible" app:srcCompat="@drawable/logo_branco" android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"/>
    <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
            android:layout_width="65dp"
            android:layout_height="180dp"
            android:id="@+id/splash_progressbar"
            android:indeterminateTint="#999999"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" android:layout_marginLeft="97dp"
            android:layout_marginStart="97dp" android:layout_marginBottom="85dp" tools:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>