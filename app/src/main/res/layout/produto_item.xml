<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxHeight="250dp"
                                    android:layout_marginBottom="0.25dp" android:layout_marginTop="0.25dp"
                                    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:layout_editor_absoluteY="2dp" android:paddingTop="0dp" android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" android:minWidth="0dp" android:minHeight="0dp"
            android:background="@android:color/background_light">


        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/listprodimagem_img" android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
        <TextView
                android:text="Nome Do Produto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/listprodtext_nome" app:layout_constraintStart_toEndOf="@+id/listprodimagem_img"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:textSize="22sp" android:textStyle="bold"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/listprodtext_preco"
                android:layout_marginRight="8dp"/>
        <TextView
                android:text="Marca do Produto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/listprodtext_marca"
                app:layout_constraintTop_toBottomOf="@+id/listprodtext_nome"
                app:layout_constraintStart_toEndOf="@+id/listprodimagem_img" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/listprodtext_loja"
                app:layout_constraintEnd_toStartOf="@+id/listprodtext_preco" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>
        <TextView
                android:text="Loja Nome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/listprodtext_loja"
                app:layout_constraintStart_toEndOf="@+id/listprodimagem_img" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:textSize="18sp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/listprodtext_marca" android:layout_marginRight="8dp"/>
        <TextView
                android:text="Preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listprodtext_preco" android:textSize="30sp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="bold" android:textColor="@android:color/holo_green_dark"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>