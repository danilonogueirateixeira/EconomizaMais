<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxHeight="250dp"
                                    android:layout_marginBottom="0.25dp" android:layout_marginTop="0.25dp"
                                    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:layout_editor_absoluteY="2dp" android:paddingTop="0dp" android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" android:minWidth="0dp" android:minHeight="0dp"
            android:background="@android:color/background_light">


        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp" app:srcCompat="@drawable/nao_encontrado"
                android:id="@+id/listlojadimagem_img" android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
        />
        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp" app:srcCompat="@drawable/circulo_crop"
                android:id="@+id/circulocropimagem_img" android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
        />

        <TextView
                android:text="Nome Da Loja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listlojatext_nome"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent" android:textSize="22sp" android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/listlojadimagem_img" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Eslogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" android:id="@+id/listlojatext_eslogan"
                app:layout_constraintTop_toBottomOf="@+id/listlojatext_nome" android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/listlojadimagem_img" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="UF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listlojatext_uf"
                android:textSize="18sp" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/listlojatext_eslogan"
                app:layout_constraintStart_toEndOf="@+id/listlojatext_estado" android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"/>
        <TextView
                android:text="Estado:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listlojatext_estado"
                android:textSize="18sp" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/listlojatext_eslogan"
                app:layout_constraintStart_toEndOf="@+id/listlojadimagem_img" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>